{
  "name": "shade-perfection",
  "version": "1.2.0",
  "description": "Figma plugin for generating mathematically balanced color shades and tints",
  "main": "code.js",
 "scripts": {
    "dev": "concurrently \"vite\" \"tsc --watch\"",
    "build": "tsc && vite build && npm run rename",
    "rename": "node -e \"require('fs').renameSync('dist/index.html', 'dist/ui.html')\"",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "preview": "vite preview"
  },
  "author": "Nursultan Akim",
  "license": "MIT",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "^1.115.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vite": "^7.1.10",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
